<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.companion.Controller.HomeController"
            prefHeight="600.0" prefWidth="800.0">

    <!-- Center Section -->
    <center>
        <VBox spacing="20" style="-fx-padding: 20px;">
            <Label text="Welcome to Companion!" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
            <Label text="Your one-stop solution for managing all your association's activities."
                   style="-fx-font-size: 16px;"/>

            <ScrollPane fitToWidth="true">
                <FlowPane fx:id="notesContainer" hgap="10" vgap="10">
                    <!-- Notes will be added here dynamically -->
                </FlowPane>
            </ScrollPane>

            <Button text="add " onAction="#handleAddNote" style="-fx-background-color: transparent; -fx-padding: 0;">

            </Button>
        </VBox>
    </center>
</BorderPane>
