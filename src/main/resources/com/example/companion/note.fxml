<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.companion.Controller.NoteController"
      stylesheets="@css/styles.css"
      spacing="10" alignment="CENTER"
      style="-fx-padding: 20; -fx-background-color: #F7F7F7; -fx-border-color: #DDDDDD; -fx-border-radius: 10; -fx-background-radius: 10; -fx-effect: dropshadow(one-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Notes" styleClass="label-title"/>

    <TableView fx:id="noteTable" prefHeight="400" prefWidth="800" style="-fx-background-color: #FFFFFF; -fx-border-color: #DDDDDD; -fx-border-radius: 5; -fx-background-radius: 5;">
        <columns>
            <TableColumn fx:id="nameColumn" text="Name"/>
            <TableColumn fx:id="contentColumn" text="Content"/>
        </columns>
    </TableView>

    <HBox spacing="10">
        <Button fx:id="addNoteButton" text="Add Note" style="-fx-pref-width: 120px;"/>
        <Button fx:id="editNoteButton" text="Edit Note" style="-fx-pref-width: 120px;"/>
        <Button fx:id="deleteNoteButton" text="Delete Note" style="-fx-pref-width: 120px;"/>
    </HBox>
</VBox>
