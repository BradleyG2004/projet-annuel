<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.companion.Controller.StepController"
      stylesheets="@css/styles.css"
      spacing="10" alignment="CENTER">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <TableView fx:id="stepTable" prefHeight="400" prefWidth="800">
        <columns>
            <TableColumn fx:id="stateColumn" text="State" minWidth="100"/>
            <TableColumn fx:id="descriptionColumn" text="Description" minWidth="200"/>
            <TableColumn fx:id="startingColumn" text="Starting Date" minWidth="150"/>
            <TableColumn fx:id="endingColumn" text="Ending Date" minWidth="150"/>
        </columns>
    </TableView>
    <Button text="Add Mission"  />

</VBox>