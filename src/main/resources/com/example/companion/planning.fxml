<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.companion.Controller.PlanningController"
      spacing="10" alignment="CENTER">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Planning" styleClass="label-title"/>

    <DatePicker fx:id="datePicker" onAction="#handleDateChange"/>

    <TableView fx:id="eventTable" prefHeight="400" prefWidth="800" style="-fx-background-color: #FFFFFF; -fx-border-color: #DDDDDD; -fx-border-radius: 5; -fx-background-radius: 5;">
        <columns>
            <TableColumn fx:id="nameColumn" text="Name"/>
            <TableColumn fx:id="typeColumn" text="Type"/>
            <TableColumn fx:id="dateColumn" text="Date"/>
        </columns>
    </TableView>
</VBox>
